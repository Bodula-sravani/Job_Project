@{
}

@{
    ViewData["Title"] = "Update page";
}
<h1>@ViewData["Title"]</h1>
<form method="post">
    <input type="hidden" name="Id" value="@Model.book.Id"/>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Id</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Title" value="(Jobs)@ViewData["job"]" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Category" value="(Jobs)@ViewData["job"]" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job category</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Author" value="(Jobs)@ViewData["job"]" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Employeer Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Author" value="(Jobs)@ViewData["job"]" required />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-1 col-form-label">Job Description</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Author" value="(Jobs)@ViewData["job"]" required />
        </div>
    </div>
    <div>
        <button type="submit" class="btn-primary btn-sm style=" text-decoration: none"">Submit</button>
    </div>

</form>